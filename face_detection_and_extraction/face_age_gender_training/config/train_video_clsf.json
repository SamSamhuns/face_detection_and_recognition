{
    "name": "ResMLP_video_clsf",
    "n_gpu": 1,
    "amp": true,
    "checkpoint": null,
    "arch": {
        "type": "ResMLP",
        "args": {
            "dropout": 0.05,
            "num_residuals_per_block": 1,
            "num_blocks": 4,
            "num_classes": 14,
            "num_initial_features": 25600,
            "reduce_in_features": 512,
            "add_residual": true,
            "add_IC": true
        }
    },
    "data_loader": {
        "type": "VideoFeatDataLoader",
        "args": {
            "data_dir": "../data/",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8,
            "dataset": "custom_video_256_train",
            "dataset_test": "custom_video_256_test",
            "num_classes": 14
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 0.0026525028717740277,
            "weight_decay": 6.5025649191944946e-06
        }
    },
    "loss": "cse",
    "metrics": [
        "accuracy",
        "top_3_acc",
        "top_5_acc"
    ],
    "lr_scheduler": {
        "type": "ExponentialLR",
        "args": {
            "gamma": 0.2921212208238253
        }
    },
    "trainer": {
        "epochs": 5,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 5,
        "tensorboard": true
    }
}
